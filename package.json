{
  "name": "@alexasomba/better-auth-paystack",
  "version": "1.0.0-rc.3",
  "description": "Community Better Auth plugin for Paystack (by alexasomba)",
  "license": "MIT",
  "author": "alexasomba",
  "categories": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexasomba/better-auth-paystack.git"
  },
  "keywords": [
    "paystack",
    "auth",
    "better-auth"
  ],
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./client": {
      "types": "./dist/client.d.mts",
      "import": "./dist/client.mjs",
      "default": "./dist/client.mjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:integration": "RUN_INTEGRATION_TESTS=1 vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint src examples/tanstack",
    "lint:package": "publint run --strict",
    "lint:types": "attw --profile esm-only --pack .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.27.0",
      "rollup": "npm:@rollup/wasm-node@4.53.5"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "better-auth": ">=1.3.0"
  },
  "dependencies": {
    "@alexasomba/paystack-node": "^1.1.6",
    "better-call": "^1.3.1",
    "defu": "^6.1.4",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@better-auth/core": "^1.4.18",
    "@better-fetch/fetch": "^1.1.21",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "@rollup/rollup-linux-x64-gnu": "^4.57.1",
    "@types/node": "^22.19.10",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "better-auth": "^1.4.18",
    "eslint": "^10.0.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "publint": "^0.3.17",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'pnpm tsc --noEmit'",
      "vitest related --run"
    ]
  }
}